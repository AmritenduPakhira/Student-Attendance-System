<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <title>All Students Attendance Data</title>
</head>
<body class="bg-gray-100">

<nav class="bg-gray-800 p-4 text-white flex justify-between items-center">
    <div class="flex items-center">
        <img src="/images/logo2.png" alt="Logo" class="h-8 mr-2">
        <span class="text-2xl font-bold">Chitkara University</span>
    </div>
    <div class="space-x-4">
        <a href="/" class="text-white">Home</a>
        <a href="/teacher/addstudent" class="text-white">Student Entry</a>
        <a href="/teacher/students" class="text-white">Student Data</a>
    </div>
</nav>

<div class="container mx-auto mt-8">
    <h1 class="text-3xl font-bold mb-4">All Students Attendance Data</h1>

    <% students.forEach(student => { %>
        <h2 class="text-xl font-bold mb-2"><%= student.name %></h2>
        <table class="min-w-full bg-white border border-gray-300 shadow mb-8">
            <thead>
                <tr>
                    <th class="border border-gray-300 px-4 py-2">Date</th>
                    <th class="border border-gray-300 px-4 py-2">Status</th>
                </tr>
            </thead>
            <tbody>
                <% student.attendance.forEach(entry => { %>
                    <tr>
                        <td class="border border-gray-300 px-4 py-2"><%= entry.date.toISOString().split('T')[0] %></td>
                        <td class="border border-gray-300 px-4 py-2"><%= entry.isPresent ? 'Present' : 'Absent' %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% }); %>
</div>

</body>
</html>
